<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ingredient_rv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Name"
        app:layout_constraintEnd_toStartOf="@+id/ingredient_rv_item_quantity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredient_rv_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Quantity"
        app:layout_constraintEnd_toStartOf="@+id/ingredient_rv_item_measure"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ingredient_rv_item_name"
        app:layout_constraintTop_toTopOf="@+id/ingredient_rv_item_name" />

    <TextView
        android:id="@+id/ingredient_rv_item_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Measure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ingredient_rv_item_quantity"
        app:layout_constraintTop_toTopOf="@+id/ingredient_rv_item_quantity" />
</androidx.constraintlayout.widget.ConstraintLayout>