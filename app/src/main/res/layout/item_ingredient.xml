<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/item_ingredient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/item_ingredient_quantity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        android:id="@+id/item_ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Quantity"
        app:layout_constraintEnd_toStartOf="@+id/item_ingredient_measure"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_ingredient_name"
        app:layout_constraintTop_toTopOf="@+id/item_ingredient_name" />

    <TextView
        android:id="@+id/item_ingredient_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Measure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_ingredient_quantity"
        app:layout_constraintTop_toTopOf="@+id/item_ingredient_quantity" />
</androidx.constraintlayout.widget.ConstraintLayout>